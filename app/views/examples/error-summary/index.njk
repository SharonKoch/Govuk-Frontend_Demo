{% from "back-link/macro.njk" import moalandBackLink %}
{% from "button/macro.njk" import moalandButton %}
{% from "date-input/macro.njk" import moalandDateInput %}
{% from "error-summary/macro.njk" import moalandErrorSummary %}
{% from "fieldset/macro.njk" import moalandFieldset %}
{% from "file-upload/macro.njk" import moalandFileUpload %}
{% from "input/macro.njk" import moalandInput %}
{% from "select/macro.njk" import moalandSelect %}
{% from "radios/macro.njk" import moalandRadios %}
{% from "checkboxes/macro.njk" import moalandCheckboxes %}
{% from "textarea/macro.njk" import moalandTextarea %}

{% extends "layout.njk" %}

{% block beforeContent %}
  {{ moalandBackLink({
    "href": "/"
  }) }}
{% endblock %}

{% block content %}
<form action="/" method="post" style="margin-bottom: 100vh;">

  {{ moalandErrorSummary({
    "titleText": "There is a problem",
    "classes": "optional-extra-class",
    "errorList": [
      {
        "text": "Problem with input",
        "href": "#input"
      },
      {
        "text": "Problem with textarea",
        "href": "#textarea"
      },
      {
        "text": "Problem with select",
        "href": "#select"
      },
      {
        "text": "Problem with date input",
        "href": "#dateinput-day"
      },
      {
        "text": "Problem with date input year",
        "href": "#dateinput2-year"
      },
      {
        "text": "Problem with file",
        "href": "#file"
      },
      {
        "text": "Problem with radios",
        "href": "#radios"
      },
      {
        "text": "Problem with checkboxes",
        "href": "#checkboxes"
      },
      {
        "text": "Problem with single checkbox",
        "href": "#single-checkbox"
      },
      {
        "text": "Problem with conditionally-revealed input",
        "href": "#yes-input"
      },
      {
        "text": "Problem with radios with big heading",
        "href": "#radios-big-heading"
      },
      {
        "text": "Problem with input within large fieldset",
        "href": "#address-postcode"
      }
    ]
  }) }}

  <h1 class="moaland-heading-xl">Your details</h1>

  {{ moalandInput({
    label: {
      "text": 'Label for input'
    },
    id: "input",
    name: "input",
    errorMessage: {
      "text": "Problem with input"
    }
  }) }}

  {{ moalandTextarea({
    label: {
      "text": 'Label for textarea'
    },
    id: "textarea",
    name: "textarea",
    errorMessage: {
      "text": "Problem with textarea"
    }
  }) }}

  {{ moalandSelect({
    label: {
      "text": 'Label for select'
    },
    id: "select",
    name: "select",
    errorMessage: {
      "text": "Problem with select"
    },
    items:[
      {
        text: 'Option one',
        value: 'one'
      },
      {
        text: 'Option two',
        value: 'two'
      }
    ]
  }) }}

  {{ moalandDateInput({
    fieldset: {
      legend: {
        text: 'Label for date input',
        classes: 'test-date-input-legend'
      }
    },
    id: 'dateinput',
    name: 'dateinput',
    errorMessage: {
      "text": "Problem with date input"
    },
    "items": [
      {
        "name": "day",
        "classes": "moaland-input--width-2 moaland-input--error"
      },
      {
        "name": "month",
        "classes": "moaland-input--width-2 moaland-input--error"
      },
      {
        "name": "year",
        "classes": "moaland-input--width-4 moaland-input--error"
      }
    ]
    })
  }}

  {{ moalandDateInput({
    fieldset: {
      legend: {
        text: 'Label for date input',
        classes: 'test-date-input2-legend'
      }
    },
    id: 'dateinput2',
    name: 'dateinput2',
    errorMessage: {
      "text": "Problem with date input year!"
    },
    "items": [
      {
        "name": "day",
        "classes": "moaland-input--width-2",
        "value": 5
      },
      {
        "name": "month",
        "classes": "moaland-input--width-2",
        "value": 12
      },
      {
        "name": "year",
        "classes": "moaland-input--width-4 moaland-input--error"
      }
    ]
    })
  }}

  {{ moalandFileUpload({
    label: {
      "text": 'Label for file upload'
    },
    id: "file",
    name: "file",
    errorMessage: {
      "text": "Problem with file"
    }
  }) }}

  {{ moalandRadios({
    fieldset: {
      legend: {
        text: 'Legend for radios'
      },
      attributes: {
        id: 'test-radios'
      }
    },
    name: "radios",
    errorMessage: {
      "text": "Problem with radios"
    },
    items:[
      {
        text: 'Label for first radio button',
        value: 'one',
        id: 'radios'
      },
      {
        text: 'Label for second radio button',
        value: 'two'
      }
    ]
  }) }}

  {{ moalandCheckboxes({
    fieldset: {
      legend: {
        text: 'Legend for checkboxes'
      },
      attributes: {
        id: 'test-checkboxes'
      }
    },
    name: "checkboxes",
    errorMessage: {
      "text": "Problem with checkboxes"
    },
    items:[
      {
        text: 'Label for first checkbox',
        value: 'one',
        id: "checkboxes"
      },
      {
        text: 'Label for second checkbox',
        value: 'two'
      }
    ]
  }) }}

  {{ moalandCheckboxes({
    fieldset: false,
    name: "single-checkbox",
    errorMessage: {
      "text": "Problem with single checkbox"
    },
    items:[
      {
        text: 'Label for single checkbox',
        value: 'agree',
        id: 'single-checkbox'
      }
    ]
  }) }}

  {% set yesField %}
  {{ moalandInput({
    label: {
      "text": 'Label for revealed text input'
    },
    id: "yes-input",
    name: "yes-input",
    errorMessage: {
      "text": "Problem with input"
    }
  }) }}
  {% endset %}

  {% set noField %}
  {{ moalandInput({
    label: {
      "text": 'Label for revealed text input'
    },
    id: "no-input",
    name: "no-input",
    errorMessage: {
      "text": "Problem with input"
    }
  }) }}
  {% endset %}

  {{ moalandRadios({
    "idPrefix": "conditional",
    "name": "conditional",
    "fieldset": {
      "legend": {
        "text": "Legend for conditionally revealed content"
      },
      "classes": "moaland-radios--error",
      attributes: {
        id: 'test-conditional-reveal'
      }
    },
    "error": true,
    "items": [
      {
        "value": "yes",
        "text": "Yes",
        "checked": true,
        "conditional": {
          "html": yesField
        }
      },
      {
        "value": "no",
        "text": "No",
        "conditional": {
          "html": noField
        }
      }
    ]
  }) }}

  {{ moalandRadios({
    classes: "moaland-radios--inline",
    idPrefix: "radios-big-heading",
    name: "radios-big-heading",
    fieldset: {
      legend: {
        text: "Have you supplied orders signed in triplicate, sent in, sent back, queried, lost, found, subjected to public inquiry, lost again, and finally buried in soft peat for three months and recycled as firelighters?",
        isPageHeading: true,
        classes: "moaland-fieldset__legend--xl test-radios-big-heading-legend"
      }
    },
    errorMessge: {
      text: "Select whether you have supplied orders meeting these criteria"
    },
    items: [
      {
        value: "yes",
        text: "Yes"
      },
      {
        value: "no",
        text: "No"
      }
    ]
  }) }}

  {% call moalandFieldset({
    legend: {
      text: "What is your address?",
      classes: "moaland-fieldset__legend--xl",
      isPageHeading: true
    }
  }) %}

    {{ moalandInput({
      label: {
        html: 'Building and street <span class="moaland-visually-hidden">line 1 of 2</span>'
      },
      id: "address-line-1",
      name: "address-line-1"
    }) }}

    {{ moalandInput({
      label: {
        html: '<span class="moaland-visually-hidden">Building and street line 2 of 2</span>'
      },
      id: "address-line-2",
      name: "address-line-2"
    }) }}

    {{ moalandInput({
      label: {
        text: "Town or city"
      },
      classes: "moaland-!-width-two-thirds",
      id: "address-town",
      name: "address-town"
    }) }}

    {{ moalandInput({
      label: {
        text: "County"
      },
      classes: "moaland-!-width-two-thirds",
      id: "address-county",
      name: "address-county"
    }) }}

    {{ moalandInput({
      label: {
        text: "Postcode"
      },
      errorMessage: {
        text: "Enter a valid postcode"
      },
      classes: "moaland-input--width-10",
      id: "address-postcode",
      name: "address-postcode"
    }) }}

  {% endcall %}

  {{ moalandButton({
    "text": "Continue"
  }) }}

</form>
{% endblock %}
