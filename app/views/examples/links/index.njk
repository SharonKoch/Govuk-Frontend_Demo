{% from "back-link/macro.njk" import moalandBackLink %}

{% extends "layout.njk" %}

{% block beforeContent %}
  {{ moalandBackLink({
    "href": "/"
  }) }}
{% endblock %}

{% block content %}

{% set variants = {
  'Link': '',
  'Link with no visited state': 'moaland-link--no-visited-state',
  'Text link': 'moaland-link--text-colour',
  'Muted link': 'moaland-link--muted'
} %}

{% set states = {
  'Link': ':link',
  'Visited link': ':visited',
  'Hovered link': ':hover',
  'Active link': ':active',
  'Focussed link': ':focus',
  'Focussed visited link': ':focus :visited',
  'Focussed hovered link': ':focus :hover',
  'Focussed active link': ':focus :active'
} %}

  <div class="moaland-grid-row">
    <div class="moaland-grid-column-two-thirds">

      <h1 class="moaland-heading-xl">
        Links
      </h1>

      <p class="moaland-body">
        <a class="moaland-link" href="#">Link with that wraps over two lines to test that the focus style works as expected</a>
      </p>

      <p class="moaland-body">
        (<a class="moaland-link" href="#">Link with surrounding brackets</a>) test that the focus style does not overlap.
      </p>

    {% for variant_description, variant_class in variants %}

      <section class="moaland-!-margin-top-8">
        <h2 class="moaland-heading-l">{{ variant_description }}</h2>

      {% for state_description, state_class in states %}
        <p class="moaland-body">
          <a href="/#{{ randomPageHash }}" class="moaland-link {{ variant_class }} {{ state_class }}">
            {{ state_description}}
          </a>
        </p>
      {% endfor %}
      </section>
    {% endfor %}

    </div>
  </div>
{% endblock %}
