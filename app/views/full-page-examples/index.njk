{% extends "layout.njk" %}
{% from "back-link/macro.njk" import moalandBackLink %}

{% block beforeContent %}
  {{ moalandBackLink({
    href: "/" + legacyQuery
  }) }}
{% endblock %}

{% block content %}
<div class="moaland-grid-row">
  <div class="moaland-grid-column-two-thirds">
    <h1 class="moaland-heading-xl">
      Full page examples
    </h1>

    <p class="moaland-body-l">These examples are designed to test the styles, components and patterns from GOV.UK Frontend in a realistic context.</p>

    <p class="moaland-body">Your responses to any questions asked in the examples will not be recorded.</p>

    <hr class="moaland-section-break moaland-section-break--l" />

    {% for example in examples %}

      <h2 class="moaland-heading-m"><a href="/full-page-examples/{{ example.path }}" class="moaland-link">{{ example.name | replace("-", " ") | capitalize }}</a></h2>

      {% if example.scenario %}
      <div class="app-prose-scope">
        {{ markdown(example.scenario) | safe }}
      </div>
      {% endif %}

      {% if example.notes %}
        <p class="moaland-body moaland-!-font-size-16">{{ example.notes }}</p>
      {% endif %}

      <hr class="moaland-section-break moaland-section-break--l" />

    {% endfor %}
  </div>
</div>
{% endblock %}
