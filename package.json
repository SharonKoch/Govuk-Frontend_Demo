{
  "private": true,
  "name": "govuk-frontend-repository",
  "description": "Used only for the development of GOV.UK Frontend, see `package/package.json` for the published `package.json`",
  "engines": {
    "node": "^18.12.0",
    "npm": "^8.1.0 || ^9.1.0"
  },
  "license": "MIT",
  "workspaces": [
    "app",
    "docs/examples/*",
    "package"
  ],
  "scripts": {
    "postinstall": "npm ls --depth=0",
    "start": "gulp dev",
    "serve": "npm run serve --workspace app",
    "heroku": "npm run build:compile && npm start --workspace app",
    "build-release": "./bin/build-release.sh",
    "publish-release": "./bin/publish-release.sh",
    "pre-release": "./bin/pre-release.sh",
    "build:compile": "gulp compile",
    "build:sassdoc": "sassdoc --config sassdoc.config.yaml ./src/govuk",
    "build:jsdoc": "jsdoc --configure jsdoc.config.js ./src/govuk",
    "build:package": "gulp build:package --destination \"package\"",
    "build:dist": "gulp build:dist --destination \"dist\"",
    "postbuild:package": "jest --color --selectProjects \"Gulp tasks\" --testMatch \"**/*build-package*\"",
    "postbuild:dist": "jest --color --selectProjects \"Gulp tasks\" --testMatch \"**/*build-dist*\"",
    "pretest": "npm run build:compile",
    "test": "jest --color --ignoreProjects \"Gulp tasks\" --maxWorkers=50%",
    "test:screenshots": "node ./tasks/screenshot-components.mjs",
    "lint": "npm run lint:docs && npm run lint:js && npm run lint:scss",
    "lint:docs": "npm run lint:docs:cli -- \"**/*.{json,md}\"",
    "lint:docs:cli": "prettier --cache --cache-location .cache/eslint --cache-strategy content --check --ignore-path .lintignore",
    "lint:js": "npm run lint:js:cli -- \"**/*.{cjs,js,mjs}\"",
    "lint:js:cli": "eslint --cache --cache-location .cache/eslint --cache-strategy content --color --ignore-path .lintignore --max-warnings 0",
    "lint:scss": "npm run lint:scss:cli -- \"{app,src}/**/*.scss\"",
    "lint:scss:cli": "stylelint --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .lintignore --max-warnings 0",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^9.8.8",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.11",
    "del": "^7.0.0",
    "front-matter": "^4.0.2",
    "glob": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-task-listing": "^1.1.1",
    "js-yaml": "^4.1.0",
    "jsdoc": "^4.0.0",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "map-stream": "^0.0.7",
    "merge-stream": "^2.0.0",
    "minimatch": "^6.1.6",
    "node-sass": "^8.0.0",
    "nunjucks": "^3.2.3",
    "plugin-error": "^2.0.1",
    "postcss": "^8.4.21",
    "postcss-pseudo-classes": "^0.2.1",
    "postcss-scss": "^4.0.6",
    "postcss-unmq": "^1.0.2",
    "postcss-unopacity": "^2.0.0",
    "postcss-unrgba": "^1.1.1",
    "rollup": "0.59.4",
    "sassdoc": "^2.7.4",
    "slash": "^5.0.0",
    "terser": "^5.16.1",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@percy/cli": "^1.17.0",
    "@percy/puppeteer": "^2.0.2",
    "@percy/sdk-utils": "^1.17.0",
    "babel-jest": "^29.3.1",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-es-x": "^5.4.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.6.7",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "html-validate": "7.13.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-axe": "^7.0.0",
    "jest-dev-server": "^6.2.0",
    "jest-environment-jsdom": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "jest-environment-puppeteer": "^6.2.0",
    "jest-serializer-html": "^7.1.0",
    "lint-staged": "^13.1.0",
    "magic-string": "^0.27.0",
    "outdent": "^0.8.0",
    "prettier": "^2.8.3",
    "puppeteer": "^19.5.2",
    "sass-color-helpers": "^2.1.1",
    "standard": "^17.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-gds": "^0.2.0",
    "stylelint-order": "^6.0.1",
    "vinyl": "^3.0.0",
    "wait-on": "^7.0.1"
  }
}
