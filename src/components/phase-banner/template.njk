{% from "../tag/macro.njk" import govukTag -%}

<div class="govuk-phase-banner
  {%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <p class="govuk-phase-banner__content">
    {% set classes = "govuk-phase-banner__content__tag " + (params.tag.classes if params.tag.classes) %}
    {{- govukTag(params.tag, classes=classes) -}}
    <span class="govuk-phase-banner__text">
      {{ params.text | safe if params.safe else params.text }}
    </span>
  </p>
</div>
