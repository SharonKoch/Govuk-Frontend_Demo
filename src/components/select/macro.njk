{% macro govukSelect(
  params,
  id,
  name,
  label,
  hint,
  items,
  errorMessage,
  classes,
  attributes
) %}
  {% if params.items and not hideDeprecated %}
    {% for item in params.items %}
      {% if item.html %}
      <strong class="deprecated">params.items[]html is deprecated in govukSelect</strong>
      {% endif %}
    {% endfor %}
  {% endif %}
  {% set id = id if id else params.id %}
  {% set name = name if name else params.name %}
  {% set label = label if label else params.label %}
  {% set hint = hint if hint else params.hint %}
  {% set items = items if items else params.items %}
  {% set errorMessage = errorMessage if errorMessage else params.errorMessage %}
  {% set classes = classes if classes else params.classes %}
  {% set attributes = attributes if attributes else params.attributes %}
  {% set params = {
    id: id,
    name: name,
    label: label,
    hint: hint,
    items: items,
    errorMessage: errorMessage,
    classes: classes,
    attributes: attributes
  } %}
  {%- include "./template.njk" -%}
{% endmacro %}
