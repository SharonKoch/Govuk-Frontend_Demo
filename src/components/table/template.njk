<table class="govuk-c-table {{ classes }}">
  {% if options.caption %}
  <caption class="govuk-c-table__caption {% if options.captionSize %} {{ options.captionSize }} {% endif %}">{{ options.caption }}</caption>
  {% endif %}
  {% if data.head %}
  <thead class="govuk-c-table__head">
    <tr class="govuk-c-table__row">
    {% for item in data.head %}
      <th class='govuk-c-table__header {% if item.type %} govuk-c-table__header--{{ item.type }} {% endif %}' scope="col">{{ item.text }}</th>
    {% endfor %}
  </tr>
  </thead>
  {% endif %}
  <tbody class="govuk-c-table__body">
    {% for rows in data.rows %}
    <tr class="govuk-c-table__row">
    {% for cell in rows %}
      {% if (loop.first) and (options.isFirstCellHeader) %}
      <th class="govuk-c-table__header" scope="row"> {{ cell.text }}</th>
      {% else %}
      <td class="govuk-c-table__cell {% if cell.type %} govuk-c-table__cell--numeric {% endif %}">{{ cell.text }}</td>
      {% endif %}
    {% endfor %}
    </tr>
    {% endfor %}
  </tbody>
</table>
