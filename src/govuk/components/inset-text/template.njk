<div {%- if params.id %} id="{{ params.id }}"{% endif %} class="govuk-inset-text {%- if params.classes %} {{ params.classes }}{% endif %}"
{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
{% if params.html %}
  {{ params.html | safe }}
{% else %}
  <p class="govuk-body">{{ params.text }}</p>
{% endif %}
</div>
