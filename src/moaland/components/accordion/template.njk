{% set id = params.id %}
{% set headingLevel = params.headingLevel if params.headingLevel else 2 %}

<div class="moaland-accordion {%- if params.classes %} {{ params.classes }}{% endif -%}" data-module="moaland-accordion" id="{{ id }}"
{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  {% for item in params.items %}
    {% if item %}
      <div class="moaland-accordion__section {% if item.expanded %}moaland-accordion__section--expanded{% endif %}">
        <div class="moaland-accordion__section-header">
          <h{{ headingLevel }} class="moaland-accordion__section-heading">
            <span class="moaland-accordion__section-button" id="{{ id }}-heading-{{ loop.index }}">
              {{ item.heading.html | safe if item.heading.html else item.heading.text }}
            </span>
          </h{{ headingLevel }}>
          {% if item.summary.html or item.summary.text %}
            <div class="moaland-accordion__section-summary moaland-body" id="{{ id }}-summary-{{ loop.index }}">
              {{ item.summary.html | safe if item.summary.html else item.summary.text }}
            </div>
          {% endif %}
        </div>
        <div id="{{ id }}-content-{{ loop.index }}" class="moaland-accordion__section-content" aria-labelledby="{{ id }}-heading-{{ loop.index }}">
          {{ item.content.html | safe if item.content.html else item.content.text }}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
