<details {%- if params.id %} id="{{params.id}}"{% endif %} class="moaland-details {%- if params.classes %} {{ params.classes }}{% endif %}" data-module="moaland-details" {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %} {{- " open" if params.open }}>
  <summary class="moaland-details__summary">
    <span class="moaland-details__summary-text">
      {{ params.summaryHtml | safe if params.summaryHtml else params.summaryText }}
    </span>
  </summary>
  <div class="moaland-details__text">
    {{ params.html | safe if params.html else params.text }}
  </div>
</details>
