{% from "../tag/macro.njk" import moalandTag -%}

<div class="moaland-phase-banner
  {%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <p class="moaland-phase-banner__content">
    {{ moalandTag({
      text: params.tag.text,
      html: params.tag.html,
      classes: "moaland-phase-banner__content__tag" + (" " + params.tag.classes if params.tag.classes)
    }) | indent(4) | trim }}
    <span class="moaland-phase-banner__text">
      {{ params.html | safe if params.html else params.text }}
    </span>
  </p>
</div>
